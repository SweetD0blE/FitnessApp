<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="horizontal"
    tools:context=".exercise.Arms">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/imageButtonReturn1"
            android:layout_width="48dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/return1"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewKefir"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:srcCompat="@drawable/kefir" />

        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#838282"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Кефир"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewYogurt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:srcCompat="@drawable/yogurt" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#838282"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Йогурт"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewCheese"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:srcCompat="@drawable/cheese" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10sp"
            android:textColor="#838282"
            android:paddingStart="50sp"
            android:text="Сыр"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewEggs"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="20sp"
            app:srcCompat="@drawable/eggs" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10sp"
            android:textColor="#838282"
            android:paddingStart="50sp"
            android:text="Яйцо"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>


</TableLayout>