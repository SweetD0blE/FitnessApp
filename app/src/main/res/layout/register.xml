<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    tools:context=".authentification.Register">

    <EditText
        android:id="@+id/phone_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите телефон"
        android:paddingLeft="15dp"
        android:inputType="phone"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register"></EditText>

    <EditText
        android:id="@+id/gender"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="80dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Ваш пол"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register"></EditText>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="132dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите ваше имя"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="248dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите Email"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/password_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите пароль"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register"></EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="160dp"
        android:background="@drawable/button_bg"
        android:text="Зарегистрироваться"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register">

    </Button>

    <EditText
        android:id="@+id/weight"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="192dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите ваш вес"
        android:inputType="numberDecimal"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="148dp"
        android:layout_height="30dp"
        android:layout_marginStart="131dp"
        android:layout_marginTop="35dp"
        android:text="Регистрация"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


</androidx.constraintlayout.widget.ConstraintLayout>