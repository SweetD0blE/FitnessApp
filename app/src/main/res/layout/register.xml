<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#4d4d4d"
    tools:context=".authentification.Register">

    <EditText
        android:id="@+id/phone_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="128dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите телефон"
        android:inputType="phone"
        android:maxLength="11"
        android:paddingLeft="15dp"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register"></EditText>

    <EditText
        android:id="@+id/fullName"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="84dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите ваше ФИО"
        android:paddingLeft="15dp"
        android:maxLength="35"
        android:paddingRight="10dp"
        android:inputType="textPersonName"
        android:selectAllOnFocus="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/email_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="196dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите Email"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:inputType="textEmailAddress"
        android:selectAllOnFocus="true"
        android:maxLength="35"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"></EditText>

    <EditText
        android:id="@+id/password_register"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите пароль"
        android:paddingLeft="15dp"
        android:maxLength="15"
        android:selectAllOnFocus="true"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/email_register"></EditText>

    <Button
        android:id="@+id/register"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="184dp"
        android:background="@drawable/button_bg"
        android:text="Зарегистрироваться"
        android:textColor="#cccccc"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register">

    </Button>

    <EditText
        android:id="@+id/weight"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_marginTop="140dp"
        android:background="@drawable/edit_text_bg"
        android:hint="Введите ваш вес"
        android:inputType="numberDecimal"
        android:maxLength="3"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView8"
        android:layout_width="148dp"
        android:layout_height="30dp"
        android:text="Регистрация"
        android:textColor="#000"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.498"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.037" />

    <RadioGroup
        android:id="@+id/ragioGender"
        android:layout_width="97dp"
        android:layout_height="50dp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"

        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/password_register">

        <RadioButton
            android:id="@+id/radioButtonM"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="М"
            android:textStyle="bold" />

        <RadioButton
            android:id="@+id/radioButtonW"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ж"
            android:textStyle="bold" />
    </RadioGroup>

    <EditText
        android:id="@+id/date_register"
        android:layout_width="250dp"
        android:layout_height="40dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/edit_text_bg"
        android:ems="10"
        android:maxLength="10"
        android:hint="Введите дату рождения"
        android:inputType="date"
        android:paddingLeft="15dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.496"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/phone_register" />


</androidx.constraintlayout.widget.ConstraintLayout>