<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"

    android:orientation="horizontal"
    tools:context=".Profile">


    <TextView
        android:id="@+id/textView6"
        android:layout_width="73dp"
        android:layout_height="24dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="340dp"
        android:text="Ваш Вес:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="372dp"
        android:text="Ваше Имя:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="156dp"
        android:layout_height="35dp"
        android:layout_marginStart="127dp"
        android:layout_marginTop="16dp"
        android:text="Ваши данные"
        android:textColor="#838282"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="88dp"
        android:layout_height="23dp"
        android:layout_marginStart="30dp"
        android:layout_marginBottom="408dp"
        android:text="Ваш Логин:"
        android:textSize="16sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/buttonSave"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="36dp"
        android:text="Сохранить"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

    <Button
        android:id="@+id/buttonLoad"
        android:layout_width="81dp"
        android:layout_height="30dp"
        android:layout_marginStart="165dp"
        android:layout_marginTop="33dp"
        android:text="Обзор"
        android:textSize="8sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageViewLoad" />

    <ImageView
        android:id="@+id/imageViewLoad"
        android:layout_width="189dp"
        android:layout_height="126dp"
        android:layout_marginStart="111dp"
        android:layout_marginTop="26dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView"
        app:srcCompat="@drawable/uploadphoto" />

    <TextView
        android:id="@+id/yourlogin"
        android:layout_width="240dp"
        android:layout_height="22dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="408dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView2" />

    <TextView
        android:id="@+id/yourname"
        android:layout_width="242dp"
        android:layout_height="23dp"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="372dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView5" />

    <TextView
        android:id="@+id/yourweight"
        android:layout_width="256dp"
        android:layout_height="22dp"
        android:layout_marginStart="15dp"
        android:layout_marginBottom="342dp"
        android:text="TextView"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@+id/textView6" />

</androidx.constraintlayout.widget.ConstraintLayout>