<?xml version="1.0" encoding="utf-8"?>
<TableLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/ConstraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#333"
    android:orientation="horizontal"
    tools:context=".food_in_training.Nuts">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ImageButton
            android:id="@+id/imageButtonReturn1"
            android:layout_width="48dp"
            android:layout_height="39dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="32dp"
            android:background="#333"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@drawable/return1"
            tools:ignore="TouchTargetSizeCheck" />
    </TableRow>

    <TableRow
        android:layout_marginTop="50dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewFunduk"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"
            app:srcCompat="@drawable/funduk" />

        <TextView
            android:id="@+id/textView3"
            android:textColor="#838282"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Фундук"
            android:textAlignment="textStart"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewMindal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"
            app:srcCompat="@drawable/mindal" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#838282"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Миндаль"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewGrezkiyOreh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"
            app:srcCompat="@drawable/greczkiy_oreh" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#838282"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Грецкий орех"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/imageViewCashew"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="30sp"
            app:srcCompat="@drawable/cashew" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="#838282"
            android:padding="10sp"
            android:paddingStart="50sp"
            android:text="Кешью"
            android:textSize="18sp"
            android:textStyle="bold" />

    </TableRow>


</TableLayout>